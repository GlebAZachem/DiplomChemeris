<Page x:Class="Diplom.Vievs.Parol"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Vievs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Parol">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Button Content="Войти" Grid.Row="4" Click="Reg_Click"/>
        <TextBlock Text="Логин" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="log1" Grid.Row="1" Width="350" Height="30" Margin="0,40,0,0" FontSize="19"/>
        <TextBlock Text="Пароль" VerticalAlignment="Top" Grid.Row="2"/>
        <TextBox x:Name="parol1" Grid.Row="2" Width="350" Height="30" Margin="0,40,0,0" FontSize="19"/>
    </Grid>
</Page>
